{
  "name": "devlab",
  "version": "1.5.2",
  "description": "Node utility for running containerized tasks",
  "keywords": [
    "docker",
    "container",
    "test",
    "testing",
    "dev",
    "workflow",
    "task"
  ],
  "main": "index.js",
  "files": [
    "build",
    "index.js"
  ],
  "bin": {
    "lab": "index.js",
    "devlab": "index.js"
  },
  "preferGlobal": true,
  "scripts": {
    "test": "npm run lint && npm run mocha",
    "mocha": "mocha test/src/*.spec.js test/src/**/*.spec.js",
    "cover": "node_modules/isparta/bin/isparta cover node_modules/mocha/bin/_mocha -- test/src/**/*.spec.js",
    "lint": "eslint . --fix",
    "build": "babel ./src --out-dir ./build",
    "local-install": "npm run build && npm install -g .",
    "changelog": "changelog devlab all -m > CHANGELOG.md"
  },
  "homepage": "https://github.com/TechnologyAdvice/DevLab",
  "repository": {
    "type": "git",
    "url": "https://github.com/TechnologyAdvice/DevLab"
  },
  "bugs": {
    "url": "https://github.com/TechnologyAdvice/DevLab/issues"
  },
  "author": "TechnologyAdvice",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.3.15",
    "babel-eslint": "^4.1.6",
    "babel-preset-es2015": "^6.3.13",
    "chai": "^3.3.0",
    "changelog": "^1.0.7",
    "eslint": "^1.5.1",
    "isparta": "neoziro/isparta#babel-6-support-with-lib",
    "mocha": "^2.3.3",
    "mocha-sinon": "^1.1.4",
    "proxyquire": "^1.7.3",
    "sinon": "^1.17.0",
    "sinon-chai": "^2.8.0"
  },
  "dependencies": {
    "bluebird": "^2.10.1",
    "cli-color": "^1.0.0",
    "js-yaml": "^3.4.2",
    "lodash": "^3.10.1",
    "minimist": "^1.2.0",
    "shelljs": "^0.5.3",
    "username": "^1.0.1"
  }
}
